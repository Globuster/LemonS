<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="2dp">



        <TextView
            android:layout_width="wrap_content"
            android:text="Кошелек"
            android:layout_gravity="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_height="wrap_content"/>











    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:padding="6dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="145dp">


        <LinearLayout
            android:id="@+id/balanceHistory"
            android:background="@drawable/round"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">


            <TextView
                android:layout_width="wrap_content"
                android:text="Баланс"
                android:textSize="16sp"
                android:textColor="#DDFFFFFF"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/mainBalance"
                android:layout_width="wrap_content"
                android:text="00.0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textColor="@color/green"
                android:layout_height="wrap_content"/>










        </LinearLayout>







    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="135dp">


        <LinearLayout
            android:padding="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/expenseShow"
            android:background="@drawable/round"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:text="Все расходы"
                android:textSize="16sp"
                android:textColor="#DDFFFFFF"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/totalExpense"
                android:layout_width="wrap_content"
                android:text="00.0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:textColor="@color/green"
                android:layout_height="wrap_content"/>









        </LinearLayout>













    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="16dp"
        android:layout_width="match_parent"
        android:layout_height="135dp">


        <LinearLayout
            android:id="@+id/incomeShow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/round"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Все доходы"
                android:textColor="#DDFFFFFF"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/totalIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="00.0"
                android:textColor="@color/green"
                android:textSize="16sp"
                android:textStyle="bold" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- Нижний блок с кнопками -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Расход -->
            <LinearLayout
                android:id="@+id/addExpense"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginEnd="16dp"
                android:background="@drawable/minus_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_minus" />

            </LinearLayout>

            <!-- Доход -->
            <LinearLayout
                android:id="@+id/addIncome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/plus_circle"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>